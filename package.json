{
  "name": "css-animation-sequencer",
  "version": "0.1.0",
  "description": "Helpers for sequencing CSS animations.",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "sample": "http-server . -c -1 -a localhost -p 3000",
    "pretty": "prettier-standard *.js src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickgravelyn/css-animation-sequencer.git"
  },
  "author": "Nick Gravelyn <nick@gravelyn.com> (https://github.com/nickgravelyn)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nickgravelyn/css-animation-sequencer/issues"
  },
  "homepage": "https://github.com/nickgravelyn/css-animation-sequencer#readme",
  "devDependencies": {
    "buble": "^0.19.3",
    "http-server": "^0.11.1",
    "husky": "^0.15.0-rc.8",
    "lint-staged": "^6.1.0",
    "prettier-standard": "^8.0.0",
    "rollup": "^0.56.0",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-uglify": "^3.0.0",
    "standard": "^10.0.3"
  },
  "standard": {
    "ignore": [
      "dist",
      "node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "dependencies": {}
}
